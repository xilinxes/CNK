<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backForDialogsWindowItem"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTollBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Диалог"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editMsg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerMsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>

       <!-- <Button
            android:id="@+id/btnSndMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backForDialogsWindowItem"
            android:text="@string/btnSend"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="25dp" />-->
    </LinearLayout>

    <ImageButton
        android:id="@+id/strelka_vniz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/back_for_strelka_msg"
        android:src="@drawable/strelka_new_msg"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editMsg"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4" />


    <EditText
        android:id="@+id/editMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/editMsg"
        app:layout_constraintStart_toStartOf="parent"
        android:maxHeight="100dp"
        android:layout_marginStart="7dp"
        app:layout_constraintEnd_toStartOf="@id/btnAddPhoto"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/btnAddPhoto"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/editMsg"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/backgroundForAddPhotoBtn"
        android:src="@drawable/ic_add_photo"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toBottomOf="@id/editMsg"
        app:layout_constraintEnd_toEndOf="parent" />



    <ImageButton
        android:id="@+id/btnSndMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btnAddPhoto"
        app:layout_constraintEnd_toEndOf="@id/btnAddPhoto"
        app:layout_constraintStart_toStartOf="@id/btnAddPhoto"
        app:layout_constraintTop_toTopOf="@id/btnAddPhoto"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:background="@color/backgroundForAddPhotoBtn"
        android:src="@drawable/send" />

</android.support.constraint.ConstraintLayout>