<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/itemImageLeft"
        android:layout_width="162dp"
        android:layout_height="288dp"
        android:layout_margin="7dp"
        android:adjustViewBounds="true"
        android:background="@drawable/left_rounded_message"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressLeftBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/itemImageLeft"
        app:layout_constraintEnd_toEndOf="@id/itemImageLeft"
        app:layout_constraintStart_toStartOf="@id/itemImageLeft"
        app:layout_constraintTop_toTopOf="@id/itemImageLeft" />


</android.support.constraint.ConstraintLayout>