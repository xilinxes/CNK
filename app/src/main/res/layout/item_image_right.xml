<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/itemImageRight"
        android:layout_width="162dp"
        android:layout_height="288dp"
        android:layout_margin="7dp"
        android:adjustViewBounds="true"
        android:background="@drawable/right_rounded_messages"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressRightBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/itemImageRight"
        app:layout_constraintEnd_toEndOf="@id/itemImageRight"
        app:layout_constraintStart_toStartOf="@id/itemImageRight"
        app:layout_constraintTop_toTopOf="@id/itemImageRight" />

</android.support.constraint.ConstraintLayout>